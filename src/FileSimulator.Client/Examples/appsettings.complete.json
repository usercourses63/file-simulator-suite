{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Quartz": "Warning",
      "FileSimulator": "Debug"
    }
  },
  "AllowedHosts": "*",
  
  "FileSimulator": {
    "_comment": "File Simulator Suite Configuration - All protocols and polling",
    
    "Ftp": {
      "Host": "file-sim-file-simulator-ftp.file-simulator.svc.cluster.local",
      "Port": 21,
      "Username": "ftpuser",
      "Password": "ftppass123"
    },
    
    "Sftp": {
      "Host": "file-sim-file-simulator-sftp.file-simulator.svc.cluster.local",
      "Port": 22,
      "Username": "sftpuser",
      "Password": "sftppass123"
    },
    
    "S3": {
      "Endpoint": "http://file-sim-file-simulator-s3.file-simulator.svc.cluster.local:9000",
      "AccessKey": "minioadmin",
      "SecretKey": "minioadmin123",
      "DefaultBucket": "input"
    },
    
    "Http": {
      "BaseUrl": "http://file-sim-file-simulator-http.file-simulator.svc.cluster.local",
      "Username": "httpuser",
      "Password": "httppass123"
    },
    
    "Smb": {
      "Host": "file-sim-file-simulator-smb.file-simulator.svc.cluster.local",
      "ShareName": "simulator",
      "Domain": "",
      "Username": "smbuser",
      "Password": "smbpass123"
    },
    
    "Nfs": {
      "MountPath": "/mnt/nfs-data"
    },
    
    "Polling": {
      "TempDirectory": "/tmp/file-processing",
      "Endpoints": [
        {
          "Name": "ftp-incoming",
          "Protocol": "ftp",
          "Path": "/incoming",
          "FilePattern": "*.csv",
          "CronSchedule": "0/30 * * * * ?",
          "DeleteAfterProcess": false,
          "MoveAfterProcess": true,
          "ProcessedPath": "/processed"
        },
        {
          "Name": "sftp-reports",
          "Protocol": "sftp",
          "Path": "/data/reports",
          "FilePattern": "report_*.xml",
          "CronSchedule": "0 */5 * * * ?",
          "DeleteAfterProcess": false,
          "MoveAfterProcess": true,
          "ProcessedPath": "/data/archive"
        },
        {
          "Name": "s3-uploads",
          "Protocol": "s3",
          "Path": "input/uploads",
          "FilePattern": "*",
          "CronSchedule": "0/15 * * * * ?",
          "DeleteAfterProcess": true,
          "MoveAfterProcess": false
        },
        {
          "Name": "http-dropbox",
          "Protocol": "http",
          "Path": "/dropbox",
          "FilePattern": "*.json",
          "CronSchedule": "0 * * * * ?",
          "DeleteAfterProcess": false,
          "MoveAfterProcess": true,
          "ProcessedPath": "/processed"
        },
        {
          "Name": "smb-shared",
          "Protocol": "smb",
          "Path": "/input",
          "FilePattern": "*.txt",
          "CronSchedule": "0/45 * * * * ?",
          "DeleteAfterProcess": false,
          "MoveAfterProcess": true,
          "ProcessedPath": "/output"
        },
        {
          "Name": "nfs-batch",
          "Protocol": "nfs",
          "Path": "/batch/incoming",
          "FilePattern": "batch_*.dat",
          "CronSchedule": "0 0 * * * ?",
          "DeleteAfterProcess": true,
          "MoveAfterProcess": false
        }
      ]
    }
  },
  
  "RabbitMQ": {
    "Host": "rabbitmq.messaging.svc.cluster.local",
    "Username": "guest",
    "Password": "guest"
  },
  
  "HealthChecks": {
    "Enabled": true,
    "Endpoints": {
      "Ready": "/health/ready",
      "Live": "/health/live"
    }
  }
}
